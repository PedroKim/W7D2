<h2>Sign In</h2>

<form action="<%= session_url %>" method="POST">
    <%= auth_token %>
    <label>
        Email:
        <input type="email" name="user[email]" value="<%= @user.email %>" />
    </label>
    <label>
        Password:
        <input type="password" name="user[password]" />
    </label>
    <input type="submit" value="Sign In" />
</form>